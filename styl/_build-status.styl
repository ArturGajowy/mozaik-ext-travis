.travis
  &__view
    &__build
      &__colored_status
        &--building
          background-color lighten($unknown-color, 15%)
        &--building&__previous--success
          background-color lighten($success-color, 15%)
        &--building&__previous--failure
          background-color lighten($failure-color, 15%)
        &--success
          background-color $success-color
        &--failure
          background-color $failure-color
        &--aborted
          background-color $unknown-color
        &--unknown
          background-color $unknown-color

  &__build-status
    .widget__body
      padding-bottom 30px

    &__current
      margin 40px 0 0 50px
      &__status
        font-size 28px
        line-height 32px

      &__time
        font-size 13px
        color darken($main-txt-color, 20)

.widget
  &__body
    &__colored
      display flex
      width 100%
      height 100%
      text-align center
      & .travis
        &__build-status
          &__current
            margin auto
